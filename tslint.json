{
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules-recommended",
    "tslint-react",
    "tslint-microsoft-contrib/recommended"
  ],
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules",
    "node_modules/tslint-microsoft-contrib"
  ],
  "rules": {
    "array-type": [true, "array-simple"],
    "handle-callback-err": true,
    "interface-name": false,
    "max-classes-per-file": false,
    "max-line-length": false,
    "new-parens": false,
    "no-var-requires": false,
    "object-literal-key-quotes": false,
    "object-literal-sort-keys": false,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "case-insensitive",
        "named-imports-order": "case-insensitive",
        "grouped-imports": true
      }
    ],
    "quotemark": false,
    "semicolon": [true, "ignore-interfaces"],
    "trailing-comma": false,
    "typedef": [
      true,
      "call-signature",
      "property-declaration"
    ],
    "variable-name": false,

    "jsx-boolean-value": [true, "never"],
    "jsx-no-multiline-js": false,

    "export-name": [true, { "allow": ["\\("] }],
    "function-name": false,
    "import-name": false,
    "insecure-random": false,
    "max-func-body-length": false,
    "no-angle-bracket-type-assertion": true,
    "no-http-string": [true, "http://.*\\.wordbots\\.io.*", "http://localhost.*"],
    "no-relative-imports": false,
    "no-suspicious-comment": false,
    "possible-timing-attack": false,
    "prefer-array-literal": false,
    "prefer-type-cast": false,
    "react-a11y-anchors": false,
    "react-a11y-event-has-role": false,
    "react-this-binding-issue": [ true, { "allow-anonymous-listeners": true } ],
    "use-simple-attributes": false
  }
}
