{
  "compilerOptions": {

    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "lib": ["es2015", "es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "./node_modules/"
  ]
}
