{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:lodash/recommended",
    "plugin:promise/recommended",
    "plugin:react/recommended",
    "plugin:unicorn/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "sourceType": "module"
  },
  "plugins": [
    "compat",
    "jest",
    "lodash",
    "promise",
    "unicorn",
    "eslint-plugin-import",
    "eslint-plugin-react",
    "eslint-plugin-jsdoc",
    "eslint-plugin-prefer-arrow",
    "@typescript-eslint",
    "@typescript-eslint/tslint"
  ],
  "rules": {
    "arrow-body-style": 2,
    "arrow-spacing": 2,
    "comma-dangle": 0,
    "eol-last": 2,
    "eqeqeq": 2,
    "jsx-quotes": 2,
    "no-console": [1, { "allow": ["error"]  }],
    "no-magic-numbers": 0,
    "no-unused-vars": 0,
    "no-var": 2,
    "prefer-arrow-callback": 2,
    "prefer-const": 2,
    "prefer-spread": 2,
    "prefer-template": 2,
    "quotes": [2, "single"],
    "semi": 2,
    "space-before-function-paren": [2, {
      "anonymous": "always",
      "named": "never"
    }],
    "strict": [2, "global"],

    "@typescript-eslint/prefer-optional-chain": 1,

    "import/no-unresolved": 2,
    "import/named": 2,
    "import/default": 2,
    "import/first": 2,
    "import/no-duplicates": 2,
    "import/order": [2, { "newlines-between": "always" }],
    "import/newline-after-import": 2,
    "import/prefer-default-export": 1,

    "jest/no-disabled-tests": 1,
    "jest/no-focused-tests": 2,
    "jest/no-identical-title": 2,
    "jest/valid-expect": 2,

    "lodash/chaining": [1, "always", 3],
    "lodash/import-scope": 0,
    "lodash/prefer-constant": 0,
    "lodash/prefer-immutable-method": 0,
    "lodash/prefer-lodash-method": 0,
    "lodash/prefer-matches": 0,

    "promise/always-return": 0,
    "promise/avoid-new": 0,
    "promise/no-callback-in-promise": 0,

    "react/boolean-prop-naming": 2,
    "react/forbid-prop-types": [2, { "forbid": ["any", "array"] }],
    "react/jsx-boolean-value": 2,
    "react/jsx-no-bind": [2, { "ignoreRefs": true }],
    "react/jsx-sort-props": 0,
    "react/jsx-wrap-multilines": [2, { "arrow": false }],
    "react/no-access-state-in-setstate": 2,
    "react/no-will-update-set-state": 2,
    "react/no-multi-comp": 2,
    "react/no-unused-prop-types": 2,
    "react/no-unused-state": 2,
    //"react/prefer-stateless-function": [2, { "ignorePureComponents": true }],
    "react/self-closing-comp": 2,

    "unicorn/filename-case": 0,
    "unicorn/no-fn-reference-in-iterator": 0,
    "unicorn/no-process-exit": 0,
    "unicorn/prevent-abbreviations": 0,

    /** Rules that we are disabling for now as part of the tslint->eslint transition
        TODO re-enable these when feasible. */
    "no-shadow": 0,
    "@typescript-eslint/ban-ts-comment": 0,
    "@typescript-eslint/no-var-requires": 0,
    "compat/compat": 0,
    "import/namespace": 0,
    "import/no-unassigned-import": 0,
    "react/prefer-stateless-function": 0,
    "react/no-did-mount-set-state": 0,
    "react/no-did-update-set-state": 0,
    "react/no-unescaped-entities": 0,
    "unicorn/no-abusive-eslint-disable": 0
  },
  "settings": {
    "import/extensions": [".js", ".jsx", ".ts", ".tsx", ".d.ts"],
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx", ".d.ts"]
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".d.ts"]
      }
    },
    "polyfills": ["fetch", "promises", "object-values"],
    "react": {
      "version": "16.6.3"
    }
  }
}
